@model IEnumerable<IQLink.Models.DeviceModuleInfo>
@{
    ViewData["Title"] = "Device Hub";
}

<div class="container">
    <div class="text-center mb-4">
        <h1 class="display-4">Device Data Collector Hub</h1>
        <p class="lead">Select a device type to manage</p>
    </div>

    <!-- Server Status Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Server Status</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-2">
                        <span class="status-indicator status-active me-2"></span>
                        <strong>Server is running at:</strong>
                        <span class="ms-2">@(Context.Request.Host.Host):@(Context.Request.Host.Port)</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="status-indicator status-active me-2"></span>
                        <strong>TCP Port Status:</strong>
                        <span class="ms-2 text-success">Listening on port 5000</span>
                    </div>
                </div>
                <div class="col-md-6 mt-3 mt-md-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <strong>System Time:</strong><br>
                            <span id="currentDateTime" class="fs-5">@DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Available Devices Section -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card device-card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">LipoDoc</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-droplet-fill text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h6 class="card-title">Blood donation lipemic monitoring system</h6>
                    <p class="card-text text-muted">Monitor and manage lipemic samples from blood donations.</p>
                    <div class="text-muted small mb-3">Version: 1.0</div>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <a href="/LipoDoc/Home/Index" class="btn btn-primary w-100">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Launch LipoDoc
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Update current date/time
        function updateDateTime() {
            const now = new Date();
            const dateTimeStr = now.toLocaleString('en-GB', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            }).replace(',', '');

            document.getElementById('currentDateTime').innerText = dateTimeStr;
        }

        // Initialize and set intervals
        updateDateTime();
        setInterval(updateDateTime, 1000);
    </script>
}