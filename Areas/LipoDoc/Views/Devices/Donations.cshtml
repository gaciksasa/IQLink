@using IQLink.Areas.LipoDoc.Models
@model PaginatedList<IQLink.Models.DonationsData>

@{
    ViewData["Title"] = "Device Donations";
    // Get the device from ViewBag instead of expecting it in the model
    var device = ViewBag.Device;
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Devices" asp-action="Index">Devices</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id">@device.SerialNumber</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Donations</li>
                </ol>
            </nav>
        </div>
    </div>

    <h1 class="mb-4">
        Donations for Device: @device.SerialNumber
        @if (!string.IsNullOrEmpty(device.Name))
        {
            <small class="text-muted">(@device.Name)</small>
        }
    </h1>

    <!-- Search and filter -->
    <div class="card bg-light mb-3">
        <div class="card-body">
            <form asp-action="Donations" asp-route-id="@device.Id" method="get" class="row g-3">
                <div class="col-12 col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search donation ID, reference code..."
                               name="searchString" value="@ViewBag.CurrentFilter">
                        <button class="btn btn-primary" type="submit">Search</button>
                        <a asp-action="Donations" asp-route-id="@device.Id" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
                <div class="col-12 col-md-6 text-end d-flex align-items-center justify-content-end">
                    <!-- Sorting button group -->
                    <div class="btn-group bg-white me-3" role="group">
                        <a asp-action="Donations" asp-route-id="@device.Id" asp-route-sortOrder="@ViewBag.TimestampSortParm"
                           asp-route-currentFilter="@ViewBag.CurrentFilter" class="btn btn-outline-secondary">
                            <i class="bi bi-clock"></i> Date
                        </a>
                        <a asp-action="Donations" asp-route-id="@device.Id" asp-route-sortOrder="@ViewBag.LipemicValueSortParm"
                           asp-route-currentFilter="@ViewBag.CurrentFilter" class="btn btn-outline-secondary">
                            <i class="bi bi-sort-numeric-down"></i> Value
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Donations Table -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Donations List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Donation ID</th>
                            <th>Date/Time</th>
                            <th>Lipemic Value</th>
                            <th>Lipemic Group</th>
                            <th>Status</th>
                            <th>Operator</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(string.IsNullOrEmpty(item.DonationIdBarcode) ? "-" : item.DonationIdBarcode)
                                </td>
                                <td>
                                    @item.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")
                                </td>
                                <td>
                                    @(item.LipemicValue?.ToString() ?? "-")
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LipemicGroup))
                                    {
                                        <span class="badge @(item.LipemicGroup == "I" ? "bg-success" :
                                                          item.LipemicGroup == "II" ? "bg-info" :
                                                          item.LipemicGroup == "III" ? "bg-warning" : "bg-danger")">
                                            @item.LipemicGroup
                                        </span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LipemicStatus))
                                    {
                                        @if (item.LipemicStatus == "PASSED")
                                        {
                                            <span class="badge bg-info">PASSED</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">LIPEMIC</span>
                                        }
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @(string.IsNullOrEmpty(item.OperatorIdBarcode) ? "-" : item.OperatorIdBarcode)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Donations" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-controller="Donations" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-controller="Donations" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info m-3">
                    No donation data available for this device.
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span>Page @Model.PageIndex of @Model.TotalPages</span>
                </div>
                <div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination mb-0">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a asp-action="Donations"
                                       asp-route-id="@device.Id"
                                       asp-route-sortOrder="@ViewBag.CurrentSort"
                                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                                       asp-route-currentFilter="@ViewBag.CurrentFilter"
                                       class="page-link">
                                        Previous
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                    <a asp-action="Donations"
                                       asp-route-id="@device.Id"
                                       asp-route-sortOrder="@ViewBag.CurrentSort"
                                       asp-route-pageNumber="@i"
                                       asp-route-currentFilter="@ViewBag.CurrentFilter"
                                       class="page-link">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a asp-action="Donations"
                                       asp-route-id="@device.Id"
                                       asp-route-sortOrder="@ViewBag.CurrentSort"
                                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                                       asp-route-currentFilter="@ViewBag.CurrentFilter"
                                       class="page-link">
                                        Next
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Device Details
        </a>
    </div>
</div>