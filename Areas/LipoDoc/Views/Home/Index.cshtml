@model IQLink.Areas.LipoDoc.Models.DashboardViewModel
@{
    ViewData["Title"] = "LipoDoc Dashboard";
}

<div class="container">
    <div class="text-center mb-4">
        <h1 class="display-4">LipoDoc</h1>
        <p class="lead">Blood donation lipemic monitoring system</p>
    </div>

    <!-- Server Status Card -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Server Status</h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            <div><strong>Server is running at:</strong> @(Context.Request.Host.Host):@(Context.Request.Host.Port)</div>

                            <div>
                                <strong>Database:</strong>
                                @if (Model.DatabaseConnected)
                                {
                                    <span class="text-success">@Model.DatabaseStatus</span>
                                }
                                else
                                {
                                    <span class="text-danger">@Model.DatabaseStatus</span>
                                    <div class="alert alert-warning mt-2">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        Database connection issue detected. Please check your connection string in appsettings.json
                                        and make sure MySQL server is running.
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-lg-6">
                            @if (Model.DatabaseConnected)
                            {
                                <div class="row">
                                    <div class="col-6">
                                        <p>
                                            <strong>System Time:</strong><br>
                                            <span id="currentDateTime">@DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")</span>
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-database-x"></i> Database metrics unavailable - No connection
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.DatabaseConnected)
    {
        <!-- Metrics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-primary">
                            <i class="bi bi-droplet-fill mb-3"></i>
                        </div>
                        <h3 class="card-title h5">Donations</h3>
                        <h2 class="display-5 mb-0">@Model.DonationsCount</h2>
                        <p class="text-muted">Total lipemic tests</p>
                        <a asp-controller="Donations" asp-action="Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-primary">
                            <i class="bi bi-hdd-network-fill mb-3"></i>
                        </div>
                        <h3 class="card-title h5">Devices</h3>
                        <h2 class="display-5 mb-0">@Model.DevicesCount</h2>
                        <p class="text-muted">(@Model.ActiveDevicesCount active)</p>
                        <a asp-controller="Devices" asp-action="Index" class="stretched-link"></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-primary">
                            <i class="bi bi-clock-history mb-3"></i>
                        </div>
                        <h3 class="card-title h5">System Uptime</h3>
                        <h2 class="display-5 mb-0">@($"{Model.SystemUptime.Days}d {Model.SystemUptime.Hours}h {Model.SystemUptime.Minutes}m")</h2>
                        <p class="text-muted">Since last restart</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-primary">
                            <i class="bi bi-box-arrow-in-right mb-3"></i>
                        </div>
                        <h3 class="card-title h5">Export Data</h3>
                        <p class="text-muted mt-3">Export collected data to CSV format</p>
                        <a asp-controller="Donations" asp-action="Export" class="btn btn-primary mt-2">Go to Export</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Card -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Recent Activity</h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.RecentDonations.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Device</th>
                                            <th>Donation ID</th>
                                            <th>Date/Time</th>
                                            <th>Lipemic Status</th>
                                            <th>Value</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.RecentDonations)
                                        {
                                            <tr>
                                                <td>@item.DeviceId</td>
                                                <td>@(string.IsNullOrEmpty(item.DonationIdBarcode) ? "-" : item.DonationIdBarcode)</td>
                                                <td>@item.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.LipemicStatus))
                                                    {
                                                        @if (item.LipemicStatus == "PASSED")
                                                        {
                                                            <span class="badge bg-info">PASSED</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">LIPEMIC</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td>@(item.LipemicValue?.ToString() ?? "-")</td>
                                                <td>
                                                    <a asp-controller="Donations" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info m-3">
                                No recent donations found. Connect devices to begin collecting data.
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Donations" asp-action="Index" class="btn btn-outline-primary">View All Donations</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Update current date/time
        function updateDateTime() {
            const now = new Date();
            const dateTimeStr = now.toLocaleString('en-GB', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            }).replace(',', '');

            document.getElementById('currentDateTime').innerText = dateTimeStr;
        }

        // Update record count
        function updateRecordCount() {
            fetch('/LipoDoc/Donations/GetCount')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    document.getElementById('recordCount').innerText = data;
                })
                .catch(error => {
                    console.error('Error fetching record count:', error);
                    document.getElementById('recordCount').innerText = 'Error loading count';
                });
        }

        // Initialize and set intervals
        updateDateTime();
        setInterval(updateDateTime, 1000);
    </script>
}