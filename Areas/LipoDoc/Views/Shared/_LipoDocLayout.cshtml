@using IQLink.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LipoDoc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lipodoc-theme.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IQ Link</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Hub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="LipoDoc" asp-controller="Home" asp-action="Index">LipoDoc</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-light sidebar">
                <nav class="navbar">
                    <div class="container-fluid flex-column align-items-start p-0">
                        <span class="navbar-brand mb-4 mt-3">
                            <i class="bi bi-droplet-fill text-primary me-2"></i> LipoDoc
                        </span>
                        <ul class="navbar-nav flex-column w-100">
                            @{
                                string currentController = ViewContext.RouteData.Values["controller"].ToString();
                                string currentAction = ViewContext.RouteData.Values["action"].ToString();
                            }
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                                   asp-area="LipoDoc" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Devices" ? "active" : "")"
                                   asp-area="LipoDoc" asp-controller="Devices" asp-action="Index">
                                    <i class="bi bi-hdd-network me-2"></i> Devices
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Donations" && currentAction == "Index" ? "active" : "")"
                                   asp-area="LipoDoc" asp-controller="Donations" asp-action="Index">
                                    <i class="bi bi-droplet me-2"></i> Donations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Donations" && currentAction == "Export" ? "active" : "")"
                                   asp-area="LipoDoc" asp-controller="Donations" asp-action="Export">
                                    <i class="bi bi-box-arrow-right me-2"></i> Export
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center">
            &copy; 2025 - IQ Link - All rights reserved
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>